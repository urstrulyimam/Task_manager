<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https:cdn.tailwindcss.com"></script>
</head>
<body>
    <!-- <h1>Hey</h1> -->
     <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded-md outline-none px-5 py-2 w-40 bg-zinc-800" type="text" placeholder="title" name="title">
                <textarea class="block w-full rounded-md outline-none mt-2 px-5 w-40 py-2 bg-zinc-800 resize-none" placeholder="write ur task details" name="details"></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="create">
            </form>
        </div>
        <div class="tasks p-10 flex gap-4 flex-wrap p-10">
            <% if(files.length > 0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                        <div class="flex flex-wrap justify-between" >
                            <a class="text-blue-500 inline-block mt-3" href="/file/<%= val %>">read more...</a>
                            <a class="text-blue-500 inline-block mt-3" href="/edit/<%= val %>">edit..</a>
                            <a class="text-blue-500 inline-block mt-3" href="/delete/<%= val %>">delete</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h1 class="text-zinc-800">No tasks</h1>
            <% } %>
        </div>
     </div>
</body>
</html>